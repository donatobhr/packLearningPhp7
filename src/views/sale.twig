{% extends 'layout.twig' %}


{% block title %}
    Sale {{sale.id}}
{% endblock %}

{% block content %}
    <table>
        <thead>
            <th>Title</th>
            <th>Author</th>
            <th>Amount</th>
            <th>Price</th>
            <th></th>
        </thead>
        {% for book in sale.books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.stock }}</td>
                <td class="price">{{ (book.price * book.stock) | number_format(2)}} <span>$</span></td>
                <td><a href="/site/book/{{book.id}}">View</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}